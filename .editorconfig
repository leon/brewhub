# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.java]
indent_style = tab
indent_size = 4

[*.js]
indent_style = tab
indent_size = 4

[*.html]
indent_style = tab
indent_size = 4

[*.less]
indent_style = tab
indent_size = 4
